      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1160"
	Title="PageMatchDetails">

    <Grid>
        <Button Width="150" Height="25" Content="Back to match list" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Button_Click"></Button>
