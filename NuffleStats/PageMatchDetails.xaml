                        <Label Foreground="White" Grid.Row="9" Grid.Column="3" Content="{Binding awayKOsInflicted}" HorizontalAlignment="Left"/>
                        <Label Foreground="White" Grid.Row="9" Grid.Column="4" Content="KOs Caused" HorizontalAlignment="Left"/>

